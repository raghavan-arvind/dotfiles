general { 
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "wireless wlp2s0"
order += "volume master"
order += "battery 0"
order += "tztime local"


tztime local {
    format = "%l:%M %p - %b %d, %G"
}

battery 0 {
    format = "%status %percentage"
    status_chr = " CHR"
    status_bat = " BAT"
    status_unk = " UNK"
    status_full = " FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    threshold_type = "percentage"
    low_threshold = 25
    integer_battery_capacity = true
    last_full_capacity = true
}

wireless wlp2s0 { 
    format_up = "%essid"
    format_down = "WiFi down"
}

volume master {
    format = " Vol: %volume"
    format_muted = "â™ª: (Muted) %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
