#!/bin/bash
if [ -z "$1" ] || [ "$1" = "on" ]; then
    echo -e "default-agent\npower on\nscan on\n" | bluetoothctl ; 
    echo -e "pair 94:16:25:0C:72:32" | bluetoothctl ; 
    sleep 1
    echo -e "connect 94:16:25:0C:72:32" | bluetoothctl ; 
elif [ "$1" = "off" ]; then
    echo -e "power off" | bluetoothctl ; 
else
    echo "Usage: airpods <on/off> (Default: on)"
fi
